<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_step"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="@dimen/unit2"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/unit2"
    card_view:cardElevation="@dimen/unit3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/step_thumbnail_img"
            android:scaleType="centerCrop"
            tools:src="@drawable/recipe"
            />
        <TextView
            android:id="@+id/step_title_card"
            style="@style/AppTheme.Headline.Inverse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="@dimen/unit2"
            tools:text="Step Title" />
    </RelativeLayout>
</android.support.v7.widget.CardView>